namespace HAGSoftware
{
    /// <summary>
    /// Interaction logic for MainWindow.xaml
    /// </summary>
    public partial class MainWindow : Window
    {
        public List<User> DatabaseUsers { get; private set; }

        public MainWindow()
        {
            InitializeComponent();
        }

        private void Click_btn_Login(object sender, RoutedEventArgs e)
        {
            Login2 win2 = new Login2();
            this.Close();
            win2.Show();
        }

        private void btn_Exit_Click(object sender, RoutedEventArgs e)
        {
            this.Close();
        }

        private void btn_Register_Click(object sender, RoutedEventArgs e)
        {
            var Username = register_Username.Text;
            var Password = register_Psw.Password;
            var ConfirmPassword = register_ConfirmPsw.Password;
            var Email = register_Email.Text;

            using (UserDataContext context = new UserDataContext())
            {
                bool matchingCheck = context.Users.Any(user => user.Name == Username);
                if (matchingCheck)
                {
                    MessageBox.Show("Username is already in use");
                }
                else
                {
                    bool emailCheck = context.Users.Any(user => user.Email == Email);
                    if (emailCheck)
                    {
                        MessageBox.Show("Email is already in use");
                    }
                    else
                    {
                        Create();
                    }
                }
            }
            
        }
        public void Create() {

            var Username = register_Username.Text;
            var Password = register_Psw.Password;
            var ConfirmPassword = register_ConfirmPsw.Password;
            var Email = register_Email.Text;

            using (UserDataContext context = new UserDataContext())
            {
                context.Users.Add(new User() { Name = Username, Password = Password, ConfirmPassword = ConfirmPassword, Email = Email });
                context.SaveChanges();


            }
        }

        public void Read()
        {
            using (UserDataContext context = new UserDataContext())
            {
                DatabaseUsers = context.Users.ToList();

            }
        }
        public void Update()
        {

        }        public void Delete()
        {

        }


    }
}
